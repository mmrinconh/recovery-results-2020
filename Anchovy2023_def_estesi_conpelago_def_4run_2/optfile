[simann]
simanniter 1000000 ; number of simulated annealing iterations
simanneps 1e-03 ; minimum epsilon, simann halt criteria
t         30000000   ; simulated annealing initial temperature
rt        0.85  ; temperature reduction factor
nt        2     ; number of loops before temperature adjusted
ns        5     ; number of loops before step length adjusted
vm        1     ; initial value for the maximum step length
cstep     2     ; step length adjustment factor
lratio    0.3   ; lower limit for ratio when adjusting step length
uratio    0.7   ; upper limit for ratio when adjusting step length
check     4     ; number of temperature loops to check
seed      10;
[hooke]
hookeiter 500000  ; number of hooke & jeeves iterations
hookeeps  1e-04 ; minimum epsilon, hooke & jeeves halt criteria
rho       0.5   ; value for the resizing multiplier
lambda    0     ; initial value for the step length
seed      10;
[bfgs]
bfgsiter  50000 ; number of bfgs iterations
bfgseps   0.01  ; minimum epsilon, bfgs halt criteria
sigma     0.01  ; armijo convergence criteria
beta      0.3   ; armijo adjustment factor
seed       10     ;









;
;
; options for the Simulated Annealing optimisation
;[simann]
;simanniter 800000  ; number of simulated annealing iterations (default 2000)
;simanneps  0.0001 ; minimum epsilon, simann halt criteria (default 1e-04)
;T          150000   ; simulated annealing temperature (default 100)
;rt         0.9  ; temperature reduction factor (default 0.85)
;nt         2    ; number of loops before temperature adjusted (default 10)
;ns         5    ; number of loops before step length adjusted (default 15)
;vm	   1	
;cstep      2     ; step length adjustment factor (default 2)
;check	   4
;
; options for the Hooke and Jeeves optimisation
;
;[hooke]
;hookeiter  500000    ; number of hooke and jeeves iterations (default 10)10
;hookeeps   5e-05 ; minimum epsilon, hooke halt criteria (default 1e-06)
;rho        0.7   ; initial value for the resizing multiplier (default 0.5)
;lambda     1     ; initial value for the step length (default 0)
